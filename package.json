{
  "name": "black-pearl-back",
  "private": true,
  "version": "1.0.0",
  "description": "ecommerce",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/api/main.js",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -d ./ormconfig.ts",
    "db:drop": "npm run typeorm:cli schema:drop",
    "migration:generate": "typeorm migration:create -n bootstrap",
    "db:migrate": "npm run typeorm:cli migration:run",
    "db:revert": "npm run typeorm:cli migration:revert",
    "db:sync": "npm run typeorm:cli schema:sync && npm run db:migrate",
    "db:bootstrap": "npm run db:drop && npm run db:sync && ts-node src/database/bootstrap.ts"
  },
  "dependencies": {
    "swc": "^1.0.11",
    "@aws-sdk/client-s3": "^3.421.0",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.2.6",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.6",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/platform-express": "^10.2.6",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.12",
    "@nestjs/typeorm": "^10.0.0",
    "autocannon": "^7.12.0",
    "cache-manager": "^5.2.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "glob": "^8.0.1",
    "handlebars": "^4.7.7",
    "joi": "^17.10.2",
    "lodash": "^4.17.21",
    "memoizee": "^0.4.15",
    "mysql2": "^3.6.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.6",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.18",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.5",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.199",
    "@types/memoizee": "^0.4.9",
    "@types/multer": "^1.4.6",
    "@types/node": "^18.18.0",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
